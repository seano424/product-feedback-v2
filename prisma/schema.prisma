generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  email       String?      @unique
  password    String
  firstName   String
  lastName    String
  username    String       @unique
  image       String?
  comments    Comment[]
  suggestions Suggestion[]
}

model Suggestion {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  title       String
  description String
  votes       Int
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  category    Category[]
  comments    Comment[]
}

model Comment {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  body         String
  userId       Int
  suggestionId Int
  suggestion   Suggestion @relation(fields: [suggestionId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model Category {
  id           Int         @id @default(autoincrement())
  name         String      @unique
  suggestionId Int?
  type         String
  suggestion   Suggestion? @relation(fields: [suggestionId], references: [id])
}
